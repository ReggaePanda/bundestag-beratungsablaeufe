    "SCHLAGWORT": [
      "Brauchwasser",
      "Heizung",
      "Industriebetrieb",
      "Kraftwerk",
      "Neubau",
      {
        "_fundstelle": "true",
        "__cdata": "Rationelle Energienutzung"
      },
