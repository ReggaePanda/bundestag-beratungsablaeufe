    "SCHLAGWORT": [
      "Angestelltenversicherungsgesetz",
      "Angestelltenversicherungs-Neuregelungsgesetz",
      {
        "_fundstelle": "true",
        "__cdata": "Arbeitsförderungsgesetz"
      },
      "Arbeitsmarkt",
